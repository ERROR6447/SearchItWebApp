            <!-- Right Content -->
            <div class="col-xl-4 col-lg-4">
                <div class="post-details3  mb-50">
                    <!-- Small Section Tittle -->
                    <div class="small-section-tittle">
                        <h4>Job Overview</h4>
                    </div>
                    <ul>
                        <li>Posted date : <span>@Model.CreatedAt</span></li>
                        <li>Location : <span>@Model.City</span></li>
                        <li>Vacancy : <span>@Model.TotalVacancies</span></li>
                        <li>Job nature : <span>@Model.MinExp</span></li>
                        <li>Salary :  <span>@Model.PostMinSal.ToString("c") - @Model.PostMaxSal.ToString("c") yearly</span></li>
                        <li>Application date : <span>Not Defined</span></li>
                    </ul>
                    <div class="btn btn-success">
                        <a asp-controller="AppliedFor" asp-action="ApplyToPost" asp-route-PostId="@Model.Id" class="btn" style="color:white">Apply Now</a>
                    </div>
                </div>
                <div class="post-details4  mb-50">
                    <!-- Small Section Tittle -->
                    <div class="small-section-tittle">
                        <h4>Company Information</h4>
                    </div>
                    <span>@Model.Company.CompName</span>
                    
                    <ul>
                        <li>Name: <span>@Model.Company.CompName</span></li>
                        <li>Web : <span>@Model.Company.CompWebsite</span></li>
                        <li>Email: <span>Not Defined</span></li>
                    </ul>
                </div>
            </div>
