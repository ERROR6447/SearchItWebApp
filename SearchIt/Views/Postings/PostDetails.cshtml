                            </div>
                        *@                        <ul>
                            <li>@Model.Postings.MinExp years of Working Experience in the field </li>
                            <li>Vacancies: @Model.Postings.TotalVacancies</li>
                            @* <li>Direct response email experience</li>
                                <li>Ecommerce website design experience</li>
                                <li>Familiarity with mobile and web apps preferred</li>
                                <li>Experience using Invision a plus</li>*@
                        </ul>
                    </div>
                </div>

            </div>
            <!-- Right Content -->
            <div class="col-xl-4 col-lg-4">
                <div class="post-details3  mb-50">
                    <!-- Small Section Tittle -->
                    <div class="small-section-tittle">
                        <h4>Job Overview</h4>
                    </div>
                    <ul>
                        <li>Posted date : <span>@Model.Postings.CreatedAt</span></li>
                        <li>Location : <span>@Model.Postings.City</span></li>
                        <li>Vacancy : <span>@Model.Postings.TotalVacancies</span></li>
                        <li>Job nature : <span>@Model.Postings.MinExp</span></li>
                        <li>Salary :  <span>@Model.Postings.PostMinSal.ToString("c") - @Model.Postings.PostMaxSal.ToString("c") yearly</span></li>
                        <li>Application date : <span>Not Defined</span></li>
                    </ul>
                    
                        @if (Model.IsApplied)
                        {
                            <div class="btn btn-outline-success" >
                            <a style="color:black;text-decoration:none">Already Applied</a>
                            </div>
                        }
                        else
                        {
                            <div class="btn btn-success">
                            <a asp-controller="AppliedFor" asp-action="ApplyToPost" asp-route-PostId="@Model.Postings.Id" class="btn" style="color:white">Apply Now</a>

                            </div>
                            <div class="btn btn-secondary">
                            <a asp-controller="Companies" asp-action="Details" asp-route-id="@Model.Postings.CompanyId" asp-route-retpostid="@Model.Postings.Id" class="btn" style="color:white">View Company</a>
                               
                            </div>
                        }
                    
                </div>
                <div class="post-details4  mb-50">
                    <!-- Small Section Tittle -->
                    <div class="small-section-tittle">
                        <h4>Company Information</h4>
                    </div>
                    <span>@Model.Postings.Company.CompName</span>

                    <ul>
                        <li>Name: <span>@Model.Postings.Company.CompName</span></li>
                        <li>Web : <span>@Model.Postings.Company.CompWebsite</span></li>
                        <li>Email: <span>@Model.Postings.Company.CompEmail</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>