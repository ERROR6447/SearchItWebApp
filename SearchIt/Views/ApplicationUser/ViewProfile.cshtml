
@model ApplicationUser 

@{
    ViewData["Title"] = "User Profile";
}

<div class="container">
    <div class="main-body">
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                      @if(Model.ImageUrl != "" && Model.ImageUrl != null){
                                <img src="@Model.ImageUrl" alt="Admin" class="rounded-circle" width="150">
                                
                            }
                            else
                            {
                          <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                      
                            }
                            <div class="mt-3">
                      <h4>@Model.FullName</h4>
                      <p class="text-secondary mb-1">@Model.Highest_Qualification</p>
                      <p class="text-muted font-size-sm">@Model.City, @Model.State, @Model.Country</p>
                      <button class="btn btn-primary">BookMark</button>
                      @*<button class="btn btn-outline-primary">Message</button>*@
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.FullName
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Dateof Birth</h6>
                    </div>
                    <div class="col-sm-3 text-secondary">
                      @Model.Dob
                    </div>
                      <h6 class="mb-0 col-sm-3">Gender</h6>
                        <div class="col-sm-3 text-secondary">
                      @Model.Gender
                    </div>  
                  </div>
                        
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.UserName
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Mobile </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.PhoneNumber
                    </div>
                  </div>
                  <hr>
                 

                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Highest Qualification </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.Highest_Qualification
                    </div>
                  </div>
                  <hr>
                 <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Experience </h6>
                    </div>
                    <div class="col-sm-3 text-secondary">
                      @Model.Experience
                    </div>
                    <div class="col-sm-3">
                      <h6 class="mb-0">Last Position</h6>
                    </div>
                    <div class="col-sm-3 text-secondary">
                      @Model.LastPosition
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Area of Interest</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.AreaOfInterest
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Preferred Location</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.PreferredLocation
                    </div>
                  </div>
                  <hr />
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.StreetAddress
                    </div>
                    <div class="col-sm-3">
                      <h6 class="mb-0"></h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.City
                    </div>
                    <div class="col-sm-3">
                      <h6 class="mb-0"></h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.State
                    </div>
                    <div class="col-sm-3">
                      <h6 class="mb-0"></h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Model.Country - @Model.PostalCode
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " target="__blank" >View CV</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
    </div>
