@model Offer
@{
    ViewData["Title"] = "Offer";
}


<div class="container">
    <div class="main-body">
        <input type="text" id="ApplyId" hidden asp-for="ApplyId" value="@Model.ApplyId" />
        <input type="text" id="Id" hidden asp-for="Id" value="@Model.Id" />
        <div class="row gutters-sm">
            <div class="col-md-1 mb-3">
            </div>
            <div class="col-md-9">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Job Title</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Apply.Postings.PostName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Company Name </h6>
                            </div>
                            <div class="col-sm-3 text-secondary">
                                @Model.Apply.Postings.Company.CompName
                            </div>
                           
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Salary Per Annum</h6>
                            </div>
                            <div class="col-sm-5 text-secondary">
                                @Model.Amt
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Additonal Description / Conditions </h6>
                            </div>
                            <div class="col-sm-5 text-secondary">

                                @Model.OfferDescrip
                            </div>
                        </div>
                        <hr>
                        
                        <div class="row">
                            <div class="col-sm-12">


                              
                                <a class="btn btn-success" onclick="AcceptOffer()">
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                    Accept Offer
                                </a>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        function AcceptOffer(){
            $.ajax({
                url:"/AppliedFor/AcceptOffer/"+$("#ApplyId").val(),
                type:"GET",
                success: function(data){
                    if (data.success) {
                        toastr.success(data.message);
                       
                    }
                    else {
                        toastr.error(data.message);
                    }
                }

            });
        }
    </script>


}