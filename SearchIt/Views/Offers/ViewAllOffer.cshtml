@model IEnumerable<Offer>
@{
    ViewData["Title"] = "All Offers";
}

<div class="container">
    <div class="text-center mb-5">
      <h3>Job Offers</h3>
      <p class="lead">Job Offers Available</p>
    </div>
   
    @foreach(Offer Offer in @Model)
