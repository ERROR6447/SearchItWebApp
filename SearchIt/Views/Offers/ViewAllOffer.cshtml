      <div class="card-body">
        <div class="d-flex flex-column flex-lg-row">
          <span class="avatar avatar-text rounded-3 me-4 bg-warning mb-2">@Offer.Apply.Postings.PostName.Substring(0,1)</span>
          <div class="row flex-fill">
            <div class="col-sm-5">
              <h4>@Offer.Apply.Postings.PostName</h4>
              <span class="badge bg-secondary">@Offer.Apply.Postings.State</span> <span class="badge bg-success">@Offer.Apply.Postings.PostMinSal.ToString("c") - @Offer.Apply.Postings.PostMaxSal.ToString("c")</span>
