@model SearchIt.Models.Company

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div class="container">
    <div class="main-body">
        <form asp-action="SendOffer" asp-controller="Offers"  method="post" >
           
            <div class="row gutters-sm">
                <div class="col-md-1 mb-3">
                </div>
                <div class="col-md-9">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Compayn Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                        @Model.CompName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    @Model.CompEmail
                                </div>
                                <h6 class="mb-0 col-sm-3">Phone Number</h6>
                                <div class="col-sm-3 text-secondary">
                                    @Model.PhoneNumber
                                </div>
                            </div>

                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Street Address</h6>
                                </div>
                                <div class="col-sm-5 text-secondary">
                                    @Model.StreetAddress <br />
                                    @Model.City <br />
                                    @Model.State  <br />
                                      @Model.Country - @Model.PostalCode <br />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Company Category</h6>
                                </div>
                                <div class="col-sm-5 text-secondary">
                                    @Model.TypeOfCompany

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0"></h6>
                                </div>
                                <div class="col-sm-5 text-secondary">
                                    <a asp-controller="Postings" asp-action="PostDetails" asp-route-id="@Model.retpostid" class='btn btn-info'>Back to Post</a>

                                </div>
                            </div>
                            <hr>
                           
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>